
    IFS="*"
    set +e
    # test if kdialog is present
    kdialog --version >/dev/null 2>&1
    if [ $? = 0 ]; then
      # if yes, display sources and keys to the user
      kdialog --geometry 500x300 --title "Paketquellen hinzufügen" --yesno "Folgende Paketquellen und Schlüssel werden hinzugefügt\n$SOURCESKEYS"
      if [ $? != 0 ]; then
          # abort if the user does not confirm
          exit 1
      fi
    else
      echo "Folgende Paketquellen und Schlüssel werden hinzugefügt"
      echo $SOURCESKEYS
      while ! [[ $abfrage == [JjNn] ]]; do
        echo -n "OK? (j/n) "
        read abfrage
      done
      if ! [[ $abfrage == [jJ] ]]; then
          # abort if the user does not confirm
          exit 1
      fi
    fi
    set -e
    
