<h1>Editing distribution</h1>

<%= error_messages_for :distribution %>

<% form_for(@distribution) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @distribution %> |
<%= link_to 'Back', distributions_path %>
