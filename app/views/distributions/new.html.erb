<% if is_admin? %>
<h1><%=t(:new_distribution)%></h1>

<%= error_messages_for :distribution %>

<% form_for(@distribution) do |f| %>
  <p>
    <b><%=t(:name_without_colon)%></b><br />
    <%= f.text_field :name %>
  </p>
  
  <p>
    <b><%=t(:kurzname)%></b><br />
    <%= f.text_field :short_name %>
  </p>

  <p>
    <b><%=t(:url)%></b><br />
    <%= f.text_field :url %>
  </p>

  <p>
    <b><%=t(:description)%></b><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <b><%=t(:predecessor)%></b><br />
	<%= f.collection_select('distribution_id', Distribution.all.reverse, :id, :name)%>
  </p>
  <p>
    <%= f.submit t(:create) %>
  </p>
<% end %>

<%= link_to t(:back), distributions_path %>
<% end %>
