<h2><%=t(:view_sent_index_0)%></h2>
	<%= render_flash %>

<% if sent_messages? %>
	<table>
      <tr>
        <th><%=t(:view_sent_index_1)%></th>
        <th><%=t(:view_sent_index_2)%></th>
        <th><%=t(:view_sent_index_3)%></th>
      </tr>

      <% for message in @messages %>
        <tr>
          <td><%=h message.recipients.map(&:login).to_sentence %></td>
          <td><%= link_to h(message.subject), sent_path(message) %></td>
          <td><%= change_date_time(message.created_at) %></td>
        </tr>
      <% end %>
    </table>
<% else %>
	<p><%=t(:view_sent_index_5)%></p>
<% end %>
	
<%= link_to t(:view_sent_index_4), user_path(current_user.id)%>
