<h2><%=h @message.subject %></h2>
	<p><strong><%=t(:view_messages_show_0)%></strong> <%=h @message.author.login %></p>
	<p><strong><%=t(:view_messages_show_1)%></strong> <%=h @message.recipients.map(&:login).to_sentence %></p>
	<p><strong><%=t(:view_messages_show_2)%></strong> <%= change_date_time(@message.created_at)%></p>
	
	<pre><%=h @message.body %></pre>
	<%= link_to t(:view_messages_show_3), reply_message_path(@message) %><br/>
	<%= link_to t(:view_messages_show_4), forward_message_path(@message) %><br/><br/>
	<%= link_to t(:view_messages_show_5), {:controller => "messages", :action => "destroy", :id => @message},:method =>:delete  %><br/>
	
	<%= link_to t(:view_messages_show_6), user_path(current_user.id)%>