<% if is_admin? %>
<h1><%=t(:view_categories_edit_0)%></h1>

<%= error_messages_for :article %>

<% form_for(@article) do |f| %>
  <p>
    <b><%=t(:name_without_colon)%></b><br />
<!--<input id="article_name" name="article[name]" size="50" type="text" value="">-->
<%= f.text_field :name %>
  </p>

  <p>
    <b><%=t(:description)%></b><br />
<!--<input id="article_descr" name="article[descr]" size="50" type="text" value="">-->
<%= f.text_field :description %>
  </p>

  <p>
    <b><%=t(:view_categories_edit_3)%></b><br />
<!--<input id="article_url" name="article[url]" size="50" type="text" value="">-->
<%= f.text_field :url %>
  </p>

  <p>
    <%= f.submit (t(:save)) %>
  </p>
<% end %>

<% else %>
<p><%=t(:not_logged_in)%></p>
<% end %>