				<th valign="middle" class="packageList" align="left"><%=t(:view_home_home_rating_rating)%></th>
				<% for metapackage in @metapackges do %>
				<% css = cycle("packageList0", "packageList1") %>
				<tr>
        			<td class="<%= css %>" valign="middle">
						<%= link_to metapackage.name, metapackage_path(metapackage.id) %>
