<h1>New info</h1>

<%= form_for(@info) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label(:header) %><br />
    <%= f.text_field(:header) %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', infos_path %>
