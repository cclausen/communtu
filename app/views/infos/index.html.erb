<h1>Listing infos</h1>

<table>
  <tr>
    <th>Content</th>
    <th>Author</th>
  </tr>

<% for info in @infos %>
  <tr>
    <td><%=h info.content %></td>
    <td><%=h info.author_id %></td>
    <td><%= link_to 'Show', info %></td>
    <td><%= link_to 'Edit', edit_info_path(info) %></td>
    <td><%= link_to 'Destroy', info, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New info', new_info_path %>
