<h2><%=h @folder.name %></h2>

<table>
  <tr>
    <th>Von</th>
    <th>Betreff</th>
    <th>erhalten</th>
  </tr>
  
  <% for message in @messages %>
    <tr>
      <td><%=h message.author.login %></td>
	  <!-- New Messages are bold --> 
	  <% if !message.is_read %>
      	<td><b><%= link_to h(message.subject), message_path(message) %></b></td>
	  <% else %>
	    <td><%= link_to h(message.subject), message_path(message) %></td>
	  <% end %>
	  <td><%= change_date_time(message.created_at) %></td>
    </tr>
  <% end %>
</table>

