<%= render(:partial => 'navi_bundle') %>
<div class="content1">
<% elsif ((params[:controller] == "packages") or (params[:controller] == "users" and params[:action] == "metapackages") or (params[:controller] == "home" and params[:action] == "new_repository") or params[:controller] == "metapackages" or params[:controller] == "distributions" or params[:controller] == "repositories")  %>
<%= render(:partial => 'users/navi_bundle') %>
<div class="content1">
<% elsif ((params[:controller] == "users" and params[:action] != "metapackages" or params[:controller] == "categories" or params[:controller] == "debs" or params[:controller] == "roles") and is_admin?) %>
<%= render(:partial => 'layouts/navi_admin') %>
<div class="content1">
<% elsif params[:controller] == "user_profiles" %>
<%= render(:partial => 'navi_download') %>
<div class="content1">
<% elsif params[:action] == "home" %>
<div class="contentstart">
<% else %>
<div class="content2">
<% div_helper = 0 %>
<% end %>
<% #if cookies[:_communtu_session] == nil 
%>
<% #flash[:error] = t(:no_cookies) 
%>
<!--<div class="flash"><span id="error">
<% flash[:error] %>
</span>
</div>-->
		<%= yield %>
<p></p>
<% if div_helper != 1 %>
</div>
<% end %>
<% ul = Userlog.new %>
<% ul.refferer = request.env['REQUEST_URI'] %>
<% if current_user != "" %>
<% ul.user_id = current_user.id %>
<% end %>
<% ul.save %> 
 </body>
</html>
