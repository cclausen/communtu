<h1><%=t(:view_videos_edit_0)%></h1>

<% form_for @video, :url => {:action => :update } do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :URL %><br />
    <input id="video_url" name="video[url]" size="50" type="text" value="<%= @video.url %>">
  </p>
  <p>
    <%= f.label :Beschreibung %><br />
   <textarea id="video_description" name="video[description]" rows="6" cols="80"><%= @video.description %></textarea>
  </p>
  <p>
    <%= f.submit t(:save) %>
  </p>
<% end %>

<%= link_to t(:back), :controller => :packages, :action => :edit, :id => @video.base_package_id %>
