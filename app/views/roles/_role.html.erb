<li>
  <%= role.rolename %>
    <% if @user.has_role?(role.rolename) %>
      <%= link_to t(:view_roles__role_0), user_role_url(:id => role.id, :user_id => @user.id), :method => :delete %>
    <% else %>
      <%= link_to t(:view_roles__role_1), user_role_url(:id => role.id, :user_id => @user.id), :method => :put %>
    <% end %>
</li>