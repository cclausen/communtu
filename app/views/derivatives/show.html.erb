<p>
  <b><%=t(:name_with_colon)%></b>
  <%=h @derivative.name %>
</p>

<p>
  <b><%=t(:view_derivatives_show_1)%></b>
  <%=h @derivative.sudo %>
</p>

<p>
  <b><%=t(:view_derivatives_show_2)%></b>
  <%=h @derivative.dialog %>
</p>


<p>
  <b><%=t(:view_derivatives_show_3)%></b>
  <%=h @derivative.icon_file %>
</p>

<% if is_admin? %>
<p>
<%= form_tag(:action => "migrate", :id => @derivative.id) %>
<%= collection_select(:derivative, :id,Derivative.all-[@derivative],:id,:name) %>
<%=  submit_tag t(:migrate_bundles_derivative) %>
<%= t(:direct_indirect_covered_packages_warning) %>
</form>
</p>

<p>
<%= link_to t(:edit), edit_derivative_path(@derivative) %> |
<%= link_to t(:delete), @derivative, :confirm => t(:are_you_sure), :method => :delete %> |
<%= link_to t(:back), derivatives_path %>
</p>

<% else %>
<p>
<%= link_to t(:back), derivatives_path %>
</p>

<% end %>