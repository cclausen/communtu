<% if is_admin? %>
<h1>Listing derivatives</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% for derivative in @derivatives %>
  <tr>
    <td><%=h derivative.name %></td>
    <td><%= link_to 'Show', derivative %></td>
    <td><%= link_to 'Edit', edit_derivative_path(derivative) %></td>
    <td><%= link_to 'Destroy', derivative, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New derivative', new_derivative_path %>
<% end %>