<% form_for(:package, @package, :url => ("/packages/update/"+@package.id.to_s)) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <b>Version</b><br />
    <%= f.text_field :version %>
  </p>
  <p>
    <b>Weblinks</b><br />
    <%= f.text_area :urls, :rows =>3 %>
  </p>
  <p>
    <%= f.submit "Speichern" %>
  </p>
<% end %>

