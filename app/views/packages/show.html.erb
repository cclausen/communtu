
<div class="inner0">
<span class="headline">Paket-Details</span>
<p>
  <b>Distribution:</b>
  <%= link_to(@package.distribution.name, distribution_path(@package.distribution)) %>
</p>

<p>
  <b>Name:</b>
  <%= @package.icon(35)%>
  <%= link_to(@package.name, "apt:" + @package.name) %>
</p>
<% if !@package.stars.nil? %>
  <p>
    <table><tr>
     <td><b>Beliebtheit:</b></td> 	
     <td><%= number_with_precision(@package.stars, 1) %>/5 Sterne&nbsp;&nbsp; </td>
     <td nowrap class='star-rating' style='width:<%= (@package.stars * 18).to_i %>px; '></td>
   </tr></table>
  </p>
<% end %>
<p>
	Paket installieren:   <%= link_to image_tag("/images/install.png", :size => "22x22"), "apt://"+@package.name%>		
<p>
  <b>Programm:</b>
  <%=if @package.is_program then "ja" else "nein" end %>
</p>
<p>
  <b>Version:</b>
  <%=h @package.version %>
</p>

<p>
  <b>Section:</b>
  <%=h @package.fullsection %>
</p>
<p>
  <b>Repository:</b>
  <%= @package.repository.url + " " + @package.repository.subtype %>
</p>

<% if not @package.urls.nil? then %>

<p>
  <b>Weblinks:</b>
  <%=auto_link @package.urls.gsub(/ /,'<br>'), link = :all, :target => '_blank' %>
</p>
<p>
<% end %>

<% if not @package.videos.empty? then %>
  <p>
  <b>Videos:<br></b>
  <ul>
  <%for v in @package.videos %>
    <li><%=auto_link v.url.gsub(/ /,'<br>'), link = :all, :target => '_blank' %>
    <%= v.description%></li>
  <% end %>
  </ul></p>
<% end %>

<p>
  <b>Beschreibung:</b>
  <%= @package.description %>
</p>

<% if !@package.depends_or_recommends.empty? then%>
  <p>
  <b>Beinhaltet folgende Pakete:</b>
  <% @package.depends_or_recommends.each do |p| %>
    <% if (icon=p.icon(20))!="" %>
      &nbsp;<%= icon%>
    <% end %>
    <%= link_to p.name, {:controller => 'packages', :action => 'show', :id => p.id}%>
  <% end %>
  </p>
<% end %>

<% if !@package.metapackages.empty? then%>
  <p>
  <b>Wird bei Communtu in folgenden Bündeln benutzt:<br></b>
  <% @package.metapackages.each do |m| %>
     <%= link_to  m.name, { :controller => :metapackages, :action => :show,\
	  				:id => m.id } %>
	  &nbsp;&nbsp;				
  <% end %>
  </p>
<% end %>

</div>
<%= link_to 'Bearbeiten', {:action => 'edit', :id => @package.id} %> &nbsp;&nbsp;
<% if !@package.depends_or_recommends.empty? then%>
<%= link_to 'Metapaket in Bündel wandeln', {:action => 'convert', :id => @package.id} %> &nbsp;&nbsp;
<% end %>
<%= link_to 'Zurück', distribution_packages_path(@package.distribution_id) %>
<% if (not session[:meta_cart].nil?) and @package.distribution_id == @distribution_id %>
		| <%= link_to_remote('Zu Bündel hinzufügen', :update => 'meta_cart',\
			:url => { :controller => :temp_metapackages, :action => :add_to_cart, :id => @package.id}) %>
<% end %>
