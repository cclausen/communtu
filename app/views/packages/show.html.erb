
<div class="inner0">
<span class="headline">Paket-Details</span>
<p>
  <b>Distribution:</b>
  <%= link_to(@package.distribution.name, distribution_path(@package.distribution)) %>
</p>

<p>
  <b>Name:</b>
  <%= link_to(@package.name, "apt:" + @package.name) %>
</p>
<p>
  <b>Version:</b>
  <%=h @package.version %>
</p>

<p>
  <b>Section:</b>
  <%=h @package.fullsection %>
</p>
<p>
  <b>Repository:</b>
  <%= @package.repository.url + " " + @package.repository.subtype %>
</p>

<% if not @package.urls.nil? then %>

<p>
  <b>Weblinks:</b>
  <%=auto_link @package.urls.gsub(/ /,'<br>'), link = :all, :target => '_blank' %>
</p>
<p>
<% end %>

  <b>Beschreibung:</b>
  <%= @package.description %>
</p>

<% if !@package.depends_or_recommends.empty? then%>
<p>
<b>Beinhaltet folgende Pakete:</b>
<%= @package.depends_or_recommends.map{|p| p.name+" "}%>
</p>
<% end %>
</div>
<%= link_to 'Bearbeiten', {:action => 'edit', :id => @package.id} %> &nbsp;&nbsp;
<% if !@package.depends_or_recommends.empty? then%>
<%= link_to 'Metapaket in B端ndel wandeln', {:action => 'convert', :id => @package.id} %> &nbsp;&nbsp;
<% end %>
<%= link_to 'Zur端ck', distribution_packages_path(@package.distribution_id) %>
<% if (not session[:meta_cart].nil?) and @package.distribution_id == @distribution_id %>
		| <%= link_to_remote('Zu B端ndel hinzuf端gen', :update => 'meta_cart',\
			:url => { :controller => :temp_metapackages, :action => :add_to_cart, :id => @package.id}) %>
		<% end %>
