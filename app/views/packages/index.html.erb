<%= link_to 'Back', distribution_path(@distribution.id) %> <div align="right">Distribution: <i><%= @distribution.name %></i></div>

<table>
<tr>
<td>Section:</td>
<td><%= form_tag distribution_path(@distribution) + '/packages/section', :method => "post" %>
    <select id="group" name="group" onchange="this.form.submit()">
        <option>all</option>
        <% @groups.each do |group| %>
            <option <%= "selected='selected'" if (session[:group] == group.section) %>><%= group.section %></option>
        <% end %>
    </select>
</form>
</td>
<td width="100%"/>
<td>Search:</td>
<td><%= form_tag distribution_path(@distribution) + '/packages/search', :method => "post" %>
    <input type="textbox" id="search" name="search"/>
</form>
</td>
</tr>
</table>

<div class="inner1">
<table width="100%" cellspacing="0">
  <tr>
    <th align="left" class="packageList">Packages</th>
    <th colspan="3" class="packageList" align="left"></th>
  </tr>

<% for package in @packages %>
<% css=cycle("packageList0", "packageList1") %>
  <tr>
  	<td class="<%= css %>"><%= package.name %></td>
    <td class="<%= css %>" width="80" align="right">
    <%= link_to image_tag("/images/search.png", :size => "22x22", :border => "0"), 
                                  distribution_package_path(@distribution.id, package) %> 
		<% if editing_metapackage? and package.distribution_id == @distribution.id %>
		    
			<%= link_to_remote(image_tag("/images/add.png", :size => "22x22", :border => "0"), \
			        :url => user_path(current_user) + "/cart/add_to_cart/" + package.id.to_s,\
			        :update => 'meta_cart') %>
		<% end %>
    	<% if is_admin? %>
    		<%= link_to image_tag("/images/edit-delete.png", :size => "22x22", :border => "0"), distribution_package_path(@distribution.id, package),\
					:confirm => 'Are you sure?', :method => :delete %>
			<% end %>
	</td>
  </tr>
<% end %>
<tr><td colspan="4" style="padding-top:15px"><%= paginating_links(@packages, :window_size => 10) %></td></tr>
</table>
</div>
