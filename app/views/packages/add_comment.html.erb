<%= render_flash %>
<% if logged_in? %>
<div class="inner1">
<table>
<%= form_tag ("/packages/save_comment/" + @id.to_s) %>
	<tr><td valign='top'><%=t(:Kommentar)%></td><td>
		<%= text_area_tag 'input', nil, { :type => :textarea, :name => :comment, :cols => 80,\
		:rows => 10 }%>
	</td></tr>
	<tr><td colspan='2' align="center">
		<%= hidden_field_tag 'package_id', @id %>
		<%= submit_tag t(:add_comment) %>	
	</td></tr>
	
</table>
</form>	
</div>
<% else %>
<div class="inner0">
<p><%=t(:not_logged_in)%></p>
</div>
<% end %>
