<h1>Kategorie bearbeiten</h1>

<%= error_messages_for :category %>

<% form_for(@category) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Beschreibung</b><br />
    <%= f.text_field :description %>
  </p>

  <p>
    <b>Übergeordnete Kategorie</b><br />
	<%= select_tag('parent_id', "<option value='1'> Root</option>"+(get_category_select_options (Category.find(1))))%>
  </p>

  <p>
    <%= f.submit "Speichern" %>
  </p>
<% end %>

<%= link_to 'Anzeigen', @category %> |
<%= link_to 'Zurück', categories_path %>
