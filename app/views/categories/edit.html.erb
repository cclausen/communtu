<% if is_admin? %>
<h1><%=t(:view_categories_edit_0)%></h1>

<%= error_messages_for :category %>

<% form_for(@category) do |f| %>
  <p>
    <b><%=t(:view_categories_edit_1)%></b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b><%=t(:view_categories_edit_2)%></b><br />
    <%= f.text_field :description %>
  </p>

  <p>
    <b><%=t(:view_categories_edit_3)%></b><br />
    <%= f.text_field :link %>
  </p>

  <p>
    <b><%=t(:view_categories_edit_4)%></b><br />
	<%= f.collection_select('parent_id', Category.find(:all, :order => "name"), :id, :name, {:include_blank => t(:view_categories_edit_5)})%>
  </p>

  <p>
    <%= f.submit ("Speichern") %>
  </p>
<% end %>

<%= link_to t(:view_categories_edit_6), @category %> |
<%= link_to t(:view_categories_edit_7), categories_path %>
<% else %>
<p><%=t(:view_categories_edit_8)%></p>
<% end %>