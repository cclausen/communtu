<h1>Kategorie bearbeiten</h1>

<%= error_messages_for :category %>

<% form_for(@category) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Beschreibung</b><br />
    <%= f.text_field :description %>
  </p>

  <p>
    <b>Kategorie</b><br />
    <%= f.text_field :category_id %>
  </p>

  <p>
    <%= f.submit "Speichern" %>
  </p>
<% end %>

