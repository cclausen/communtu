<% if is_admin? %>
<h1><%=t(:view_categories_new_0)%></h1>

<%= error_messages_for :category %>

<% form_for(@category) do |f| %>
  <p>
    <b><%=t(:view_categories_index_1)%></b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b><%=t(:view_categories_index_2)%></b><br />
    <%= f.text_field :description %>
  </p>

  <p>
    <b><%=t(:view_categories_new_3)%></b><br />
    	<%= f.collection_select('parent_id', Category.find(:all, :order => "name"), :id, :name, {:include_blank => t(:view_categories_new_4)})%>
  </p>

  <p>
    <%= f.submit t(:view_categories_new_5) %>
  </p>
<% end %>

<%= link_to t(:view_categories_new_6), categories_path %>
<% else %>
<p><%=t(:view_categories_edit_8)%></p>
<% end %>
