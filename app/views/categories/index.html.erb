<% if logged_in? %>
<h1><%=t(:view_categories_index_0)%></h1>

<table>
  <tr>
  	<th>Id</th>
    <th><%=t(:name_without_colon)%></th>
    <th><%=t(:description)%></th>
    <th><%=t(:superior_category)%></th>
  </tr>

<% for category in @categories %>
  <tr>
  	<td><%=h category.id %></td>
    <td><%=h category.name %></td>
    <td><%=h category.description %></td>
    <td><%=h category.parent_name %></td>
    <td><%= link_to image_tag("24-message-info.png", :title => t(:show), :alt => t(:show), :border => '0'), category %></td>
    <td><%= link_to image_tag("edit.png", :title => t(:edit), :alt => t(:edit), :border => '0'), edit_category_path(category) %></td>
    <td><%= link_to image_tag("delete.png", :title => t(:delete), :alt => t(:delete), :border => '0'), category, :confirm => t(:are_you_sure), :method => :delete %></td>
  </tr>
  <tr><td colspan="7"><hr></td> </tr>
<% end %>
</table>

<br />

<%= link_to t(:new_category), new_category_path %>
&nbsp;&nbsp;&nbsp;
<%= link_to t(:view_categories_index_12), '/images/categories.png', :target => '_blank' %>
<% else %>
<p><%=t(:not_logged_in)%></p>
<% end %>
