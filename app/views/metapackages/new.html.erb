<% if logged_in? %>
<h1><%=_('Neues Bündel')%></h1>

<%= render_flash %>

<%= error_messages_for :metapackage %>

<% form_for(@metapackage) do |f| %>
  <p>
    <b><%=_('Name')%></b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b><%=_('Beschreibung')%></b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b><%=_('Kategorie')%></b><br />
      	<% @categories = Category.find(:all, :order => "name")%>
        <%= f.collection_select(:category_id,@categories,:id,:name)%>
  </p>

  <p>
    <b><%=_('Standardmäßig installieren')%></b><br />
    <%= f.check_box :default_install %>
  </p>

  <p>
    <%= f.submit _("Anlegen") %>
  </p>
<% end %>
<% else %>
<p><%=_('Du bist momentan nicht eingeloggt. Bitte klicke oben auf Anmelden.')%></p>
<% end %>
