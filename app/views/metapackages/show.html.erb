<div class="inner0">
<%= render_flash %>
<% if logged_in? %>

<table width="100%">
	<tr><td width="50%">
			<span class="headline">   <%=h @metapackage.name %>
</span> <br />
<font size="-3"><%=_('Bündel erstellt von ')%><b><%= link_to @metapackage.user.login, user_path(@metapackage.user.id) %></b></font> 
<%=link_to (image_tag("message.png", :alt=>_("neue Nachricht"),:title=>_("neue Nachricht"), :mouseover=>"message_rollover.png",:border=>"0" ), {:controller=>"sent", :action=>"new", :mail_to=>@metapackage.user.id}) %>
</td>
	
<% if !request.env['HTTP_REFERER'].nil? then %>

     <td width="25%"></td>
     <td width="25%" align="right">
       <%= link_to _("Zurück&nbsp;&nbsp;"), request.env['HTTP_REFERER'] %>
	 </td>  
<% end %>
    </tr>
</table>

<p>
  <%= @metapackage.description %>
</p>

<p>
  <b><%=_('Kategorie:')%></b>
  <%=h @metapackage.category.name %>
</p>

<p>
  <b><%=_('Standardmäßig installieren:')%></b>
  <%=@metapackage.default_install ? _("ja") : _("nein") %>
</p>
<p>
  <b><%=_('Lizenztyp:')%></b>
  <%= Package.show_license_type(@metapackage.license_type) %>
</p>
<p>
    <b><%=_('Veröffentlicht: ')%></b>
    <% if @metapackage.is_published? %>
        <%= image_tag("yes.png", :size => "22x22", :border => "0", :title => _("veröffentlicht"), :alt => _("veröffentlicht"))  %>
    <% else %>
        <%= image_tag("no.png", :size => "22x22", :border => "0", :title => _("nicht veröffentlicht"), :alt => _("nicht veröffentlicht"))  %>
    <% end %>
</p>
  
<div style="position:relative; left:480px; top:-30px; height:0px;width:150px;">
<% if logged_in? and (@metapackage.owned_by? current_user or is_admin?) %>
<%=_('  Aktionen:&nbsp;&nbsp;')%>
<div style="position:relative; top:-22px; left:64px">
  <%= form_tag(metapackage_path(@metapackage) + "/edit_action") %>
    <select id="method" name="method" onchange="this.form.submit()">
        <option value="noop">---</option>
        <option value="edit"><%=_('Editieren')%></option>
        <option value="pedit"><%=_('Paketliste editieren')%></option>
        
        <% if not @metapackage.is_published? %>
        <option value="publish"><%=_('Veröffentlichen')%></option>
        <% else %>
        <option value="unpublish"><%=_('Sperren')%></option>
        <% end %>
        <option value="delete"><%=_('Löschen')%></option>
    </select>
  </form>
  </div>
<% end %>
</div>

<% if is_admin? %>
<%= link_to _('Direkt und indirekt enthaltene Pakete'), :action => 'rdepends', :id => @metapackage.id %>
<% end %>

<% if !@metapackage.metapackages.empty? then%>
  <p>
  <b><%=_('Wird bei Communtu in folgenden Bündeln benutzt:')%></b><br />
  <ul>
  <% @metapackage.metapackages.each do |m| %>
    <li>
       <%= link_to  m.name, { :controller => :metapackages, :action => :show,\
	  				:id => m.id } %>
    </li>				
  <% end %>
  </ul>
</p>
<% end %>


<hr>
<%= render :partial => "package_list", :locals => { :metapackage => @metapackage, :editable => false, :distribution => @distribution, :derivative =>  @derivative} %>
<%= image_tag("/images/editp.png", :size => "22x22", :border => 0, :title => _("Kommentieren"), :alt => _("Kommentieren")) %> 
<%= link_to _('Kommentieren'), { :controller => :metapackages, :action => :add_comment, \
	    :id => @metapackage.id } %>
<%= show_comments @metapackage.comments %>
<% else %>
<p><%=_('Du bist momentan nicht eingeloggt. Bitte klicke oben auf Anmelden.')%></p>
<% end %>
</div>
