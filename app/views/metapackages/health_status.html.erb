<h1><%=t(:health_status)%></h1>

<h2><%=t(:bundles_with_missing_debs)%></h2>
<%if @bundles_with_missing_debs.empty?%>
  <%=t(:none)%>
<%else%>
  <ul>
  <%for b in @bundles_with_missing_debs%>
   <li> <%=link_to b.name, "/debs/bundle/#{b.id}"%></li>
  <%end%>
  </ul>
<%end%>

