<div class="inner0">

<%= render_flash %>
    <span class="headline">Bündel-Informationen anpassen</span>
    <br/>
    <br/>
    <% form_for(@metapackage) do |f| %>
        <br/>
        <div align="right"><%= submit_tag "Speichern"%></div>
        <table>
        <tr>
	        <td>Name:</td>
	        <td><%= f.text_field(:name, { :size => 16}) %></td>	
        </tr>
        <tr>
	        <td>Version:</td>
			<%if @metapackage.version.nil? or @metapackage.version.empty? %>
	        <td><%= f.text_field(:version, { :size => 16, :value => "0.1"}) %></td>	
			<% else %>
	        <td><%= f.text_field(:version, { :size => 16}) %></td>	
			<% end %>
        </tr>
        <tr>
	        <td>Kategorie:</td>
	        <td>
	        	<% @categories = Category.find(:all, :order => "name")%>
		        <%= f.collection_select(:category_id,@categories,:id,:name)%>
	        </td>
        </tr>
        <tr>
	        <td>Standardmäßig installieren:</td>
	        <td><%= f.check_box(:default_install) %></td>	
        </tr>
        <tr>
	        <td valign='top'>Beschreibung:</td>
	        <td><%= f.text_area(:description, { :rows => 12, :cols => 50 } ) %></td>	
        </tr>

        </table>	
	<%= render :partial => "package_list", :locals => { :metapackage => @metapackage, :editable => true } %>	
        <div align="right"><%= submit_tag "Speichern"%></div>
		

    <% end %>
</div>
